{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/npm/oxlint/configuration_schema.json",
  "rules": {
    "typescript": "warn",
    "import": "warn",
    "promise": "warn",
    "react": "off",
    "unicorn": "warn",
    "oxc": "warn"
  },
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "globals": {
    "__dirname": "readonly",
    "__filename": "readonly",
    "process": "readonly",
    "NodeJS": "readonly",
    "console": "readonly"
  },
  "ignore": [
    "node_modules",
    "dist",
    "out",
    "build",
    "*.d.ts",
    "auto-imports.d.ts",
    "components.d.ts"
  ]
}
