# Server Configuration
PORT=8002
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/xiaozhi

# JWT Configuration
JWT_SECRET=your-super-secret-key-change-in-production-min-32-characters
JWT_EXPIRES_IN=7d

# Redis Configuration
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# File Upload
MAX_FILE_SIZE=100MB
UPLOAD_DIR=./uploads

# LLM Service Configuration
LLM_SERVICE_URL=http://localhost:8000
LLM_API_KEY=your-llm-api-key
LLM_DEFAULT_MODEL=gpt-3.5-turbo
LLM_TIMEOUT=30000

# MCP Service Configuration
MCP_SERVICE_URL=http://localhost:8081
MCP_TIMEOUT=10000

# SMS Configuration
SMS_ACCESS_KEY_ID=your-access-key-id
SMS_ACCESS_KEY_SECRET=your-access-key-secret
SMS_SIGN_NAME=小智助手

# CORS Configuration
CORS_ORIGIN=*

# Logging Configuration
LOG_LEVEL=info
LOG_CONSOLE=true
LOG_FILE=true
LOG_DIR=./logs

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# Server Monitoring
MONITOR_SERVICE_URL=http://localhost:9090
